<!DOCTYPE html>
<html>
  <head>
    <title>Mleewise</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700" rel="stylesheet">
  </head>
  <body>
	<header>
		<nav class="logo">
			<a href="/">Michael Lee Wise</a>
			<% if current_user %>
				<div id="admin">
					<div id="adminLeft">
						<%= link_to 'Admin: ' + current_user.name, '/admin' %>
					</div>
					<div class="adminMiddle">
						<%= link_to 'New Post', 'posts/new' %>
					</div>
					<div id="adminRight">
						<%= link_to 'Logout', '/logout' %>
					</div>
				</div>
			<% else %>
				<% if Rails.env.development? %>
					<div id="admin">
						<%= link_to 'Login','/login' %>
					</div>
				<% end %>
			<% end %>


		</nav>
		<nav class="navButtons">
			<!-- https://css-tricks.com/navigation-in-lists-to-be-or-not-to-be/ -->
			<div class="navButton">
				<a href="/techinmiami">tech in miami</a>

			</div> 
			<div class="navButton">
				<a href="/posts">blogs</a>
			</div> 
			<div class="navButton">
				<a href="/works">works</a>
				<!-- demos -->
				<!-- projects -->
				<!-- portfolio -->
				<!-- mesaplot -->
			</div> 
			<div class="navButton">
				<a href="/me">me</a>
			</div> 
		</nav>
	</header>

	<header class="subheader" id="tech">
		<nav>startup corner</nav>
		<nav>events</nav>
	</header>
	<header class="subheader" id="blogs">
		<nav>Technical</nav>
		<nav>Personal</nav>
		<!-- <nav>Essays</nav> -->
	</header>
	<header class="subheader" id="works">
		<nav>Demos</nav>
		<nav>Projects</nav>
		<nav>Portfolio</nav>
		<nav>Mesaplot</nav>
	</header>
	<header class="subheader" id="me">
		<nav>Me</nav>
	</header>

	<% if :notice %>
		<div class="center full notice">
			<%= yield :notice %>	
		</div>
	<% end %>
	
	<main class="columns">

		<div class="flex1 rows pad1em">
	    	<%= yield %>
		</div>

		<div class="flex3 rows pad1em">
			<%= yield :aside %>
		</div>
		
	</main>

  </body>
</html>
